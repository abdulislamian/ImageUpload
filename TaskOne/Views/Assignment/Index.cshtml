@model IEnumerable<TaskOne.Models.Assignments>

<br />
<br />
<div class="border p-4 bg-white">
    <div class="row">
        <div class="col-8">
            <h2 class="text-info"> Assignment List</h2>
        </div>
        <div class="col-2 text-right">
            <a asp-action="UploadAssignment" class="btn btn-info form-control"> Create New Assignment </a>
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        Assignment Id
                    </th>
                    <th>Assingment Name</th>
                    <th>
                        Assignment Files
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>@item.AssignmentTitle</td>
                        <td>
                            <a class="btn btn-primary text-white" asp-action="GetFiles" asp-route-Id="@item.Id">
                            View Files
                        </a>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No publisher exists...</p>
        }
    </div>
</div>