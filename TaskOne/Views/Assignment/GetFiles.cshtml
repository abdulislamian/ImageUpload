@model IEnumerable<TaskOne.Models.FilePath>

<br />
<br />
<div class="border p-4 bg-white">
    <div class="row">
        <div class="col-8">
            <h2 class="text-info"> Assignment File List</h2>
        </div>
    </div>
    <br />
    <div>
        @if (Model != null)
        {
            @if (Model.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            Assignment Id
                        </th>
                        <th>File Link</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Id
                            </td>
                            <td>@item.Path</td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No file links exists...</p>
            }
        }
        else
        {
            <p>No file links exists...</p>
        }
    </div>
</div>